<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "https://www.eclipse.org/jetty/configure_10_0.dtd">

<Configure id="Server" class="org.eclipse.jetty.server.Server">
  <Call class="org.eclipse.jetty.quickstart.QuickStartConfiguration" name="configureMode">
    <Arg><Ref refid="Server"/></Arg>
    <Arg><Property name="jetty.quickstart.mode"/></Arg>
  </Call>

  <New id="props" class="java.util.HashMap">
    <Call name="put">
       <Arg>jetty.quickstart.mode</Arg>
       <Arg><Property name="jetty.quickstart.mode"/></Arg>
    </Call>
    <Call name="put">
       <Arg>jetty.quickstart.generateOrigin</Arg>
       <Arg><Property name="jetty.quickstart.generateOrigin"/></Arg>
    </Call>
    <Call name="put">
       <Arg>jetty.quickstart.origin</Arg>
       <Arg><Property name="jetty.quickstart.origin"/></Arg>
    </Call>
    <Call name="put">
       <Arg>jetty.quickstart.xml</Arg>
       <Arg><Property name="jetty.quickstart.xml"/></Arg>
    </Call>
  </New>

  <Ref refid="DeploymentManager">
    <Call name="addLifeCycleBinding">
      <Arg>
        <New class="org.eclipse.jetty.deploy.bindings.GlobalWebappConfigBinding">
          <Set name="jettyXml">
                <Property name="jetty.base"/>/etc/quickstart-webapp.xml
          </Set>
          <Get name="properties">
             <Call name="putAll">
                <Arg><Ref refid="props"/></Arg>
             </Call>
          </Get>
        </New>
      </Arg>
    </Call>
  </Ref>
</Configure>
